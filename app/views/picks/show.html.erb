<%= stylesheet_link_tag 'show', :media => "all" %>

<div class="toko">
 <div class="toko1">
  <h3>詳細</h3>
  <div class="pick">
    <p><%= @pick.about %></p>
    <p><%= @pick.created_at %></p>
  </div>

  <div class="comment-wrapper">
    <p>コメント一覧</p>
    <% @comments.each do |c| %>
      <div>
        <%= c.content %>
        <br>
        <%= c.user.email unless c.user.blank? %>
      </div>
        <br>
    <% end %>

    <% if user_signed_in? %>
      <%= form_with(model: [@pick, @comment], local: true) do |f| %>
        <%= f.text_area :content %>
        <%= button_tag type: "submit" do %>
          <i class="far fa-comments"></i> コメントする
        <% end %>
      <% end %>
    <% end %>
  </div>

  <%= link_to "一覧に戻る", picks_path %>
 </div>
</div>